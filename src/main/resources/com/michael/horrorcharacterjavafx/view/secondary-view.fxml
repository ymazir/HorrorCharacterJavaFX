<AnchorPane fx:id="updatePageAnchorPane" prefHeight="276.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.michael.horrorcharacterjavafx.controller.SecondaryController">
   <children>
      <HBox fx:id="updatePageHBox" alignment="CENTER" layoutY="57.0" prefHeight="139.0" prefWidth="800.0" spacing="10.0">
         <children>
            <VBox fx:id="updatePageNameVBox" alignment="CENTER" prefHeight="131.0" prefWidth="140.0">
               <children>
                  <Label fx:id="updatePageNameLabel" alignment="CENTER" prefHeight="20.0" prefWidth="66.0" text="Name" />
                  <TextField fx:id="updatePageNameTextField" prefHeight="40.0" prefWidth="145.0" />
               </children>
            </VBox>
            <VBox fx:id="updatePageHealthVBox" alignment="CENTER" prefHeight="131.0" prefWidth="140.0">
               <children>
                  <Label fx:id="updatePageHealthLabel" alignment="CENTER" text="Health" />
                  <TextField fx:id="updatePageHealthTextField" prefHeight="40.0" prefWidth="100.0" />
               </children>
            </VBox>
            <VBox fx:id="updatePageVulnerabilitiesVBox" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="updatePageVulnerabilitiesLabel" text="Vulnerabilities" />
                  <RadioButton fx:id="updatePageVulnerabilitiesPoisonRadioButton" mnemonicParsing="false" text="Poison" />
                  <RadioButton fx:id="updatePageVulnerabilitiesFireRadioButton" mnemonicParsing="false" text="Fire" />
                  <RadioButton fx:id="updatePageVulnerabilitiesSunlightRadioButton" mnemonicParsing="false" text="Sunlight" />
                  <RadioButton fx:id="updatePageVulnerabilitiesHolyWaterRadioButton" mnemonicParsing="false" text="Holy Water" />
                  <RadioButton fx:id="updatePageVulnerabilitiesSilverRadioButton" mnemonicParsing="false" text="Silver" />
               </children>
            </VBox>
            <VBox fx:id="updatePageDobVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="updatePageDobLabel" text="Date Of Birth" />
                  <DatePicker fx:id="updatePageDobDatePicker" />
               </children>
            </VBox>
            <VBox fx:id="updatePageSubtypeVBox" alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="updatePageSubtypeLabel" text="Subtype" />
                  <ComboBox fx:id="updatePageSubtypeComboBox" editable="true" prefWidth="150.0" promptText="Select subtype" visibleRowCount="3" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="updatePageFinalUpdateButton" layoutX="352.0" layoutY="213.0" mnemonicParsing="false" onAction="#handleUpdatePageFinalUpdateButtonAction" text="Finalize update" />
      <Label fx:id="infoLabel" layoutX="386.0" layoutY="245.0" text="Label" />
   </children>
</AnchorPane>
